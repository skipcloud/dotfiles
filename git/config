	email = skipcloudgibson@gmail.com
	name = Skip Gibson
	signingkey = E0F4735F9A1D73D60BA40D4C1D2BBCD06B5F1BE6
[core]
	editor = nvim
        hooksPath = /home/skip/.config/git/hooks/
[branch]
	autosetuprebase = always
[pull]
	rebase = true
[alias]
	# Remove any branches that have been merged to master
	clean-branches = !git checkout master && \
		git fetch --all -p &&\
		git merge origin/master &&\
		git branch --merge |\
		grep -vE 'staging|master' |\
		xargs --no-run-if-empty git branch -d &&\
		git checkout -
	ctags = !.git/hooks/ctags
	undo = reset HEAD^
	wip = !git add . && git commit -m WIP
[url "git@github.com:"]
	insteadOf = https://github.com/
[init]
	templatedir = /home/skip/.config/git/hooks
	defaultBranch = main
[rebase]
	autoSquash = true
	autoStash = true
[merge]
	tool = vimdiff
[mergetool]
	keepBackup = false
[rerere]
	# https://git-scm.com/book/en/v2/Git-Tools-Rerere
	enabled = true
[color]
	pager = true
[diff]
	tool = vimdiff2
