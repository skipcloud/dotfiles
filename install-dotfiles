#!/bin/bash
stow_dirs=( "bash" "irb" "pry" "tmux" "vim" "zsh" )
os=$(uname)

if type stow >/dev/null; then
  for i in "${stow_dirs[@]}"
  do
    stow $i
  done
else
  echo "stow is not installed, please install and retry"
fi

if [ -d './git' ]; then
  for file in $(ls -A git); do
    if [ -f "$file" ]; then
      ln -fs $(pwd)/git/$file $HOME/$file
    elif [ -d "$file" ]
      ln -fds $(pwd)/git/$file $HOME/$file
    fi
  done
fi
  
if [ $os = "Darwin" ]; then
  $(cd brew && brew install)
fi
